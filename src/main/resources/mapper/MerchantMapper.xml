<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cov.link.mapper.MerchantMapper">

    <update id="addAmountByAccountId">
        update sys_merchant
        set amount = amount + #{amount}
        where id = #{accountId}
    </update>

</mapper>